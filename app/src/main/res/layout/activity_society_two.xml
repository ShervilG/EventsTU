<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Society_one"
    android:background="@drawable/buttongradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/t1"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:drawableStart="@drawable/ic_home_black_24dp"
                android:text="M.A.R.S."
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="28sp" />

            <Button
                android:id="@+id/dddown"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="120dp"
                android:drawableRight="@drawable/dot"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:src="@drawable/s2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:gravity="center"
            android:text="M.A.R.S."
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text="Mechatronics and Robotics Society"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="21sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:gravity="left"
            android:layout_marginTop="15sp"
            android:textAlignment="center"
            android:text="Mechatronics and ROBOtics Society aims to mentor young Engineering students who have a passion for robotics and wish to hone their technical skills."
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="15sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:gravity="left"
            android:layout_marginTop="20sp"
            android:text="Contact: +91-87258 31845\nMessenger: @roboticsTU"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>